{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "esnext.asynciterable"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "typeRoots": ["./types", "node_modules/@types"]
   }
}